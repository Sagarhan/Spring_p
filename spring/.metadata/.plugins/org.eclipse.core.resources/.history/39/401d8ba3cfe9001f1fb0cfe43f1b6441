	public long  add( UserDTO dto) {
		String sql = 	"insert into user values(?,?,?,?,?)";
		
		int i=jdbcTemplate.update(sql,dto.getFristname(),dto.getLastname(),dto.getLoginid(),dto.getPassword(),dto.getId());
		return i;
	
		
		
	}
	
	 

