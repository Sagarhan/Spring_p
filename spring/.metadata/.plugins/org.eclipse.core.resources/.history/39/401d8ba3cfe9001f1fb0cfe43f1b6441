	public UserDTO findByPK(long pk) {
 		
		String sql ="select id,fristname,lastname,login,password from user where id =?";
		
		Object []param= {pk};
	List list=	jdbcTemplate.query(sql, param, new UserMapper());
	
	UserDTO dto =null;
	
	if (list.size() > 0) {
		 	dto=(UserDTO) list.get(0);
		
	}
		return dto;
	}

